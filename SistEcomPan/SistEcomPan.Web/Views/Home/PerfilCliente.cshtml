@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card shadow mb-3">
            <div class="card-header py-3 bg-primary">
                <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user"></i> Mis Datos</h6>
            </div>

            <div class="card-body p-3">
                <form id="formulario">
                    <div class="row align-items-start">
                       
                            <div class="form-group col-12 col-sm-3 text-center">
                                <div>
                                    <img id="ImgFoto" class="img-fluid rounded mx-auto d-block mb-2" src="" style="width:100px;height:100px;" />
                                </div>
                                <hr />
                                <div class="custom-file mb-2">
                                    <input class="custom-file-input" type="file" id="txtFoto" />
                                    <label class="custom-file-label" for="txtFoto">Foto</label>
                                </div>
                            </div>
                            <div class="form-group col-12 col-md-9">
                        <div class="row">

                        <div class="form-group col-12 col-sm-4">
                            <label for="txtTipoCliente">Tipo de Cliente</label>
                            <input type="text" class="form-control form-control-sm" id="txtTipoCliente" />
                        </div>
                        <div class="form-group col-12 col-sm-4">
                            <label for="txtDni">Documento de Identidad</label>
                            <input type="text" class="form-control form-control-sm" id="txtDni" />
                        </div>
                        <div class="form-group col-12 col-sm-4">
                            <label for="txtNombres">Nombres</label>
                            <input type="text" class="form-control form-control-sm" id="txtNombres" />
                        </div>
                        </div>
                            <div class="row">
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtApellidos">Apellidos</label>
                                    <input type="text" class="form-control form-control-sm" id="txtApellidos" />
                                </div>
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtDireccion">Direccion</label>
                                    <input type="text" class="form-control form-control-sm" id="txtDireccion" />
                                </div>
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtIdDistrito">Distrito</label>
                                    <select class="form-control form-control-sm input-validar" id="txtIdDistrito">                                  
                                   @*      <option value="" disabled selected hidden>Seleccione Su distrito</option> *@
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtTelefono">Telefono</label>
                                    <input type="text" class="form-control form-control-sm" id="txtTelefono" />
                                </div>
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtCorreo">Correo</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCorreo" />
                                </div>
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtNombreUsuario">Usuario</label>
                                    <input type="text" class="form-control form-control-sm" id="txtNombreUsuario" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-12 col-sm-4">
                                    <label for="txtClave">Contraseña</label>
                                    <input type="password" class="form-control form-control-sm" id="txtClave" />
                                </div>   
                                
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success btn-sm" type="button" id="btnGuardarCambios">Guardar Cambios</button>
@*                         <button class="btn btn-primary  btn-sm" type="button" id="btnEnviarPedido">Realizar Pedido</button> *@
                    </div>
@*                     <div class="form-row">
                        <div class="form-group col-sm-12">
                            <button type="button" class="btn btn-success btn-sm btn-block" id="btnGuardarCambios">Guardar Cambios</button>
                        </div>
                    </div> *@
                </form>
            </div>
        </div>
    </div>
    
</div>



@section Scripts {



    <script src="~/js/Vistas/PerfilCliente.js"></script>

}
